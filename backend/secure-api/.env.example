# Server Configuration
PORT=3002
NODE_ENV=production

# Security
API_KEY=your-super-secure-api-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3004,https://your-frontend-domain.vercel.app

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/chat

# Gemini API (Free Tier)
GEMINI_API_KEY=your-gemini-api-key-here

# Database (if needed for advanced features)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_assistant

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/ogg,audio/webm
